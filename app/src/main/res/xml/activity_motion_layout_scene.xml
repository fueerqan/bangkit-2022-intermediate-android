<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:autoTransition="animateToEnd"
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@id/start"
        motion:duration="2000">
        <KeyFrameSet />
        <OnSwipe />
    </Transition>

    <ConstraintSet android:id="@+id/start">
        <Constraint
            android:id="@+id/iv_android"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:elevation="8dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent" />
        <Constraint
            android:id="@+id/card_item_motion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="0.1"
            motion:layout_constraintBottom_toTopOf="@+id/iv_android"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintVertical_bias="15.0" />
        <Constraint
            android:id="@+id/iv_leaf_1"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:alpha="0.1"
            android:elevation="8dp"
            android:rotationX="180"
            motion:layout_constraintStart_toStartOf="@id/card_item_motion"
            motion:layout_constraintTop_toTopOf="@id/card_item_motion" />
        <Constraint
            android:id="@+id/iv_leaf_2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:alpha="0.1"
            android:elevation="8dp"
            motion:layout_constraintEnd_toEndOf="@id/card_item_motion"
            motion:layout_constraintTop_toTopOf="@id/card_item_motion" />
        <Constraint
            android:id="@+id/iv_leaf_3"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:alpha="0.1"
            android:elevation="8dp"
            android:rotationY="180"
            motion:layout_constraintEnd_toEndOf="@id/card_item_motion"
            motion:layout_constraintStart_toStartOf="@id/card_item_motion"
            motion:layout_constraintTop_toBottomOf="@id/card_item_motion" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint
            android:id="@+id/iv_android"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:elevation="8dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintHorizontal_bias="0.1"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintVertical_bias="0.05" />
        <Constraint
            android:id="@+id/card_item_motion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="1"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintVertical_bias="0.32999998" />
        <Constraint
            android:id="@+id/iv_leaf_1"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="-30dp"
            android:alpha="1"
            android:elevation="8dp"
            android:rotationX="180"
            motion:layout_constraintTop_toTopOf="@+id/card_item_motion"
            android:rotationY="180" />
        <Constraint
            android:id="@+id/iv_leaf_2"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="-30dp"
            android:alpha="1"
            android:elevation="8dp"
            android:rotationX="180"
            android:rotationY="180"
            motion:layout_constraintTop_toTopOf="@+id/card_item_motion" />
        <Constraint
            android:id="@+id/iv_leaf_3"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="-30dp"
            android:alpha="1"
            android:elevation="8dp"
            motion:layout_constraintTop_toBottomOf="@+id/card_item_motion" />
    </ConstraintSet>
</MotionScene>